{
  "name": "drzavno-projekt",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo run build --filter=api --filter=web",
    "dev": "turbo run dev",
    "dev:apps": "turbo run dev --filter=api --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:apps": "turbo run start --filter=api --filter=web"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
